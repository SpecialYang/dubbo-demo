<?xml version="1.0" encoding="UTF-8"?>
<!-- 添加 DUBBO SCHEMA -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--激活bean类中的注解，比如required,autowired之类-->
    <context:annotation-config />
    <!--开启组件扫描，用于发现被标记为组件的类自动注册为bean-->
    <context:component-scan base-package="com.specialyang.dubbo.user" />


    <!--当前项目在分布式架构中唯一名称-->
    <dubbo:application name="user-provider" owner="specialyang"/>

    <!--注册中心地址-->
    <dubbo:registry address="zookeeper://localhost:2181?backup=localhost:2182,localhost:2183" />

    <!--当前服务所依赖的协议-->
    <dubbo:protocol name="dubbo" port="20881" />

    <!--可以利用spring的注解自动注册bean-->
    <dubbo:service interface="com.specialyang.dubbo.common.facade.user.IUserService"
                   ref="IUserService"/>

</beans>
